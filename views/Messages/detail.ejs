<%- contentFor('HeaderCss') %> <%- contentFor('breadcrumb') %>

<div class="row">
  <div class="col-12">
    <div class="page-title-box d-flex align-items-center justify-content-between">
      <h4 class="mb-0">View message</h4>

      <div class="page-title-right">
        <ol class="breadcrumb m-0">
          <li class="breadcrumb-item">
            <a href="javascript:void(0);">Messages</a>
          </li>
          <li class="breadcrumb-item active">View message</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<%- include ('../Partials/FlashMessage') %> <%- contentFor('body') %> <% if (message && message.length > 0) { %>
<ul class="errors">
  <%= message %>
</ul>
<% } %>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <a href="/messages" class="back-button">
          <button type="button" class="btn btn-success btn-rounded waves-effect waves-light mb-2 me-2">
            <i class="mdi mdi-arrow-left-thick me-1" style="font-size: 14px"></i>
            Back
          </button>
        </a>
      </div>

      <div class="card-body">
        <div class="mb-3 row">
          <label for="example-text-input" class="col-md-2 col-form-label"> Date </label>
          <div class="col-md-10">
            <b><%= formData && formData.createdAt ? formData.createdAt : '' %> </b>
          </div>
        </div>

        <div class="mb-3 row">
          <label for="example-text-input" class="col-md-2 col-form-label"> Name </label>
          <div class="col-md-10">
            <b><%= formData && formData.name %></b>
          </div>
        </div>

        <div class="mb-3 row">
          <label for="example-text-input" class="col-md-2 col-form-label"> Email </label>
          <div class="col-md-10">
            <b><%= formData && formData.from %></b>
          </div>
        </div>

        <div class="mb-3 row">
          <label for="example-text-input" class="col-md-2 col-form-label"> Text </label>
          <div class="col-md-10"><%= formData && formData.text %></div>
        </div>

        <div class="mt-4 row">
          <label for="example-text-input" class="col-md-2 col-form-label"> </label>
          <div class="col-md-10">
            <button type="submit" class="btn btn-primary w-md">Save</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- contentFor('FooterJs') %> <%- contentFor('BottomJs') %>